<%if(session.user){%>
  <p id="crear-pregunta">
    <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
  </p>
<%}%>
<div id="buscar-preguntas">
<form method="get" action="/quizes">
<label for="search">Buscador de Preguntas</label>
<input type="text" id="search" name="search" placeholder="Texto a buscar" />
<input type="submit" value="Buscar" />
</form>
</div>
<% if (quizes.length > 0) {%>
<table>
<% var i; for (i=0; i < quizes.length; i++) { %>        
<tr>
  <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a> (<%= quizes[i].tema %>)</td>
  <%if(session.user){%>
    <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
    <td>
      <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
        <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
          borrar
        </button>
      </form>
    </td>
  <%}%>
</tr> 
<% } %>
</table>
<% } else { %>
       <p id="no-resultados">No hay resultados para su bÃºsqueda</p>
<% } %>

